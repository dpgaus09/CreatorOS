{
  "name": "CreatorOS LMS",
  "description": "Deploy this Learning Management System to Digital Ocean with one click.",
  "repository": "https://github.com/dpgaus09/CreatorOS",
  "template": true,
  "services": [
    {
      "name": "creatoros-app",
      "github": {
        "branch": "main",
        "repo": "dpgaus09/CreatorOS"
      },
      "build_command": "chmod +x .do/deploy.sh && ./.do/deploy.sh",
      "run_command": "npm run start",
      "envs": [
        { "key": "NODE_ENV", "value": "production", "scope": "RUN_TIME" },
        { "key": "DATABASE_URL", "type": "SECRET", "scope": "RUN_TIME" },
        { "key": "PORT", "value": "8080", "scope": "RUN_TIME" },
        { "key": "HOST", "value": "0.0.0.0", "scope": "RUN_TIME" }
      ],
      "http_port": 8080,
      "instance_count": 1,
      "instance_size_slug": "basic-xs",
      "health_check": {
        "http_path": "/api/health",
        "initial_delay_seconds": 30,
        "period_seconds": 10,
        "timeout_seconds": 5,
        "success_threshold": 1,
        "failure_threshold": 3
      }
    }
  ],
  "databases": [
    {
      "name": "creatoros-db",
      "engine": "PG",
      "version": "14"
    }
  ]
}